{
  "name": "koa_starter",
  "version": "1.0.1",
  "description": "Koa Starter API",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start pm2.process.json",
    "nodemon": "pm2 start --no-daemon pm2.process.json",
    "cluster": "pm2 start index.js -f -i 2 --no-daemon",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "delete": "pm2 delete all",
    "deploy": "pm2 deploy pm2.deploy.json production",
    "dev": "nodemon --debug index.js",
    "test": "NODE_ENV=test mocha 'test/*.js' 'server/plugins/**/test.js'",
    "lint": "eslint server/**",
    "comments": "smartcomments --generate --target ./server",
    "apidoc": "apidoc -i ./server -o ./public/doc",
    "licenses": "license-checker > public/licenses.txt",
    "docker:up": "docker-compose up --no-deps --build -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --no-deps --build",
    "docker:push:node": "docker push registry.gitlab.com/koa_starter/koa_starter:node",
    "docker:push:nginx": "docker push registry.gitlab.com/koa_starter/koa_starter:nginx"
  },
  "dependencies": {
    "app-module-path": "^2.0.0",
    "bunyan": "^1.8.1",
    "bunyan-format": "^0.2.1",
    "bunyan-rollbar": "^0.1.0",
    "co-foreach": "^1.1.1",
    "config": "^1.21.0",
    "cron": "^1.1.0",
    "dotenv": "^2.0.0",
    "glob": "^7.1.0",
    "jsonwebtoken": "^7.1.9",
    "koa": "^1.2.4",
    "koa-better-ratelimit": "^2.1.2",
    "koa-bodyparser": "^2.2.0",
    "koa-compose": "^2.4.0",
    "koa-compress": "^1.0.9",
    "koa-cors": "0.0.16",
    "koa-logger": "^1.3.0",
    "koa-onerror": "^2.0.0",
    "koa-router": "^5.4.0",
    "koa-static": "^2.0.0",
    "koa-toobusy": "^1.0.1",
    "lodash": "^4.16.2",
    "moment": "^2.15.1",
    "mongoose": "^4.6.1",
    "mongoose-hook-ensure-indexes": "^0.1.4",
    "newrelic": "^1.30.4",
    "node-fetch": "^1.6.3",
    "pm2": "^2.0.18",
    "rollbar": "^0.6.2",
    "shortid": "^2.2.6",
    "thunkify": "^2.1.2"
  },
  "devDependencies": {
    "apidoc": "^0.16.1",
    "eslint": "^3.6.1",
    "flow-bin": "^0.33.0",
    "license-checker": "^8.0.0",
    "mocha": "^3.1.0",
    "nodemon": "^1.10.2",
    "should": "^11.1.0",
    "smartcomments": "^0.3.2",
    "supertest": "^2.0.0"
  },
  "engines": {
    "node": ">=6.x.x"
  }
}
